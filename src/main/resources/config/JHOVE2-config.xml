<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

 	<!-- JHOVE2 framework bean -->
	<bean id="JHOVE2" class="org.jhove2.core.JHOVE2" scope="prototype"/>
		
 	<!-- Characterizer bean -->
	<bean id="Characterizer" class="org.jhove2.module.characterize.Characterizer"
	      scope="prototype"/>
	      
 	<!-- JSON displayer bean -->
	<bean id="JSONDisplayer" class="org.jhove2.module.display.JSONDisplayer"
	      scope="prototype"/>
	      	
 	<!-- Text displayer bean -->
	<bean id="TextDisplayer" class="org.jhove2.module.display.TextDisplayer"
	      scope="prototype"/>
	      	
 	<!-- XML displayer bean -->
	<bean id="XMLDisplayer" class="org.jhove2.module.display.XMLDisplayer"
	      scope="prototype"/>
	
</beans>
